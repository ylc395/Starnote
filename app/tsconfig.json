{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["webpack-env", "emscripten"],
    "paths": {
      "utils/*": ["src/utils/*"],
      "domain/*": ["src/domain/*"],
      "drivers/*": ["src/drivers/*"],
      "textlint/*": ["../textlint/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
